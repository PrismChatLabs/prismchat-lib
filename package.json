{
  "name": "prismchat-lib",
  "version": "0.4.2",
  "description": "The Prism Chat Library for E2E, anonymous and decentralized communication built on libsodium.",
  "main": "build/main.js",
  "types": "build/main.d.ts",
  "repository": {
    "type": "git",
